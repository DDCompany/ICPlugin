<idea-plugin>
    <id>com.ddcompany.innercore</id>
    <name>InnerIntegration</name>
    <version>1.0</version>
    <vendor>DDCompany</vendor>

    <idea-version since-build="145.0"/>

    <depends>com.intellij.modules.lang</depends>
    <depends>JavaScript</depends>

    <extensions defaultExtensionNs="com.intellij">
        <directoryProjectGenerator implementation="com.ddcompany.innercore.project.ICProjectGenerator"/>

        <projectService serviceInterface="com.ddcompany.innercore.ICService"
                        serviceImplementation="com.ddcompany.innercore.ICService"/>

        <psi.referenceContributor implementation="com.ddcompany.innercore.references.ICReferenceContributor"/>
        <completion.contributor language="JavaScript"
                                implementationClass="com.ddcompany.innercore.completion.ICCompletionContributor"/>
        <fileBasedIndex implementation="com.ddcompany.innercore.index.TexturesIndex$Blocks"/>
        <fileBasedIndex implementation="com.ddcompany.innercore.index.TexturesIndex$Items"/>
    </extensions>

    <actions>
        <group id="ICPlugin.INNER_GROUP_GENERATE" text="Generate">
            <add-to-group group-id="GenerateGroup" anchor="last"/>
            <!--<action id="ICPlugin.ActionGenerateItem" class="com.ddcompany.innercore.actions.callbacks.item.ActionGenerateItem" text="Generate Item" />-->
        </group>

        <group id="ICPlugin.TOOLBAR">
            <add-to-group group-id="ToolbarRunGroup" anchor="after" relative-to-action="RunnerActions"/>
            <action id="ICPlugin.ActionPush" class="com.ddcompany.innercore.actions.ActionPush"
                    text="Push to Device"/>
            <action id="ICPlugin.ActionICStop" class="com.ddcompany.innercore.actions.ActionICStop"
                    text="Stop InnerCore"/>
        </group>

        <group id="ICPlugin.MENU">
            <add-to-group group-id="FileMenu" relative-to-action="InvalidateCaches" anchor="after"/>
            <action id="ICPlugin.ActionAddLibrary" class="com.ddcompany.innercore.actions.ActionAddLibrary"/>
        </group>

        <action id="com.ddcompany.innercore.actions.ActionTreePush"
                class="com.ddcompany.innercore.actions.ActionTreePush" text="Push to Device">
            <add-to-group group-id="ProjectViewPopupMenu" anchor="last"/>
        </action>
    </actions>
</idea-plugin>